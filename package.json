{
  "name": "electron-vite-project",
  "private": true,
  "version": "0.0.8",
  "type": "module",
  "author": "Davis Chang",
  "repository": "https://github.com/DavisChang/electron-react-template-autoupdater",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "npm run lint && npm run typecheck:web && npm run typecheck:node",
    "test:e2e": "playwright test",
    "test:e2e:safe": "npm run fix:e2e && playwright test",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage --coverage.reporter=lcov",
    "test:coverage": "npm run test:unit:coverage",
    "sonar:scan": "sonar-scanner",
    "test:sonar": "npm run test:coverage && npm run sonar:scan",
    "quality:check": "./scripts/quality-check.sh",
    "quality:full": "npm run quality:check:no-cleanup && npm run test:e2e && echo '▶ Cleaning up build artifacts...' && rm -rf dist dist-electron && echo '✅ Build artifacts cleaned up'",
    "quality:check:no-cleanup": "./scripts/quality-check.sh --no-cleanup",
    "pre-commit": "npm run quality:check",
    "setup:hooks": "./scripts/setup-hooks.sh",
    "setup:dev": "npm install && ./scripts/setup-hooks.sh && npm run quality:check",
    "setup:new-dev": "./scripts/setup-new-dev.sh",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"electron/**/*.{ts,js}\" \"docs/**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"electron/**/*.{ts,js}\" \"docs/**/*.md\"",
    "lint:fix": "npm run lint -- --fix",
    "analyze": "./scripts/analyze-code.sh",
    "badges": "./scripts/generate-badges.sh",
    "fix:e2e": "./scripts/fix-e2e.sh",
    "test:build": "npm run lint && npm run typecheck:web && npm run typecheck:node && npm run build",
    "typecheck:web": "tsc --noEmit -p tsconfig.json --composite false",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false"
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.14.0",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.2.0",
    "html2pdf.js": "^0.10.2",
    "jotai": "^2.10.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "react-markdown": "^9.0.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.1",
    "@types/plist": "^3.0.5",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.6",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.47",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-compression2": "^1.3.3",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^2.1.5"
  },
  "main": "dist-electron/main.js"
}
