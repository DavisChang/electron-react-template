#!/bin/bash

echo "ğŸš€ Running pre-push checks..."

# Get the remote and URL
remote="$1"
url="$2"

# Check if we're pushing to main branch
protected_branch='main'
current_branch=$(git symbolic-ref HEAD | sed 's/refs\/heads\///')

if [[ "$current_branch" == "$protected_branch" ]]; then
    echo "âš ï¸ Pushing to protected branch '$protected_branch'."
    echo "ğŸ” Running comprehensive quality checks..."
    
    # Run full quality check including E2E tests
    if command -v npm &> /dev/null; then
        if npm run quality:full; then
            echo "âœ… All comprehensive checks passed."
        else
            echo "âŒ Comprehensive checks failed."
            echo "ğŸ’¡ Please fix all issues before pushing to $protected_branch"
            echo "   Or use 'git push --no-verify' to bypass (not recommended for main branch)."
            exit 1
        fi
    fi
fi

echo "âœ… Pre-push checks completed successfully."
